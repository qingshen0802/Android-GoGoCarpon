<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@dimen/splashscreen"
    android:scrollbars="vertical" >
<!-- android:background="@color/transparent" -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/lblPrice"
            style="@style/PriceText"
            android:text="$ 234.56" >
        </TextView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="$35 for 4-Course Italian Meal at Covelli Italian Bistro Wine Bar in Orchard (Worth $80)"
            android:textColor="@color/black" >
        </TextView>

        <TextView
            style="@style/HeaderText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="$35 for 4-Course Italian Meal at Covelli Italian Bistro Wine Bar in Orchard (Worth $80)"
            android:textColor="@color/white"
            android:background="@android:color/transparent">
        </TextView>

        <TextView
            style="@style/DefaultLableInputControl"
            android:text="Nhap gia tri" >
        </TextView>

        <Button
            android:id="@+id/btnLargeButton123"
            style="@style/LargeButtonControl"
            android:text="LargeButtonControl"
            android:layout_width="match_parent"
            android:background="@color/green_buy_button"/>

        <Button
            android:id="@+id/btnDisplayMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display map" />

        <Button
            android:id="@+id/btnReadData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read Data" />
        
        
    </LinearLayout>

</ScrollView><!-- </RelativeLayout> -->
