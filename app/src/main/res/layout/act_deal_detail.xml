<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/silver"
    android:orientation="vertical" >
<!-- android:background="@color/white" -->
    <!-- Statis Bar -->

    <!-- Display content -->

    <ScrollView
        android:id="@+id/ScrollView01"
        android:background="@color/silver"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder" />
                    <!--
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

		        android:adjustViewBounds="true"
		        android:scaleType="fitXY"

                android:layout_gravity="center_vertical|center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/placeholder" />
            -->
                    <!--  -->

                    <TextView
                        android:id="@+id/lblName"
                        style="@style/DefaultTextLarge"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textStyle="bold"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
                        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
                        android:text="$35 for 4-Course Italian Meal at Covelli Italian Bistro Wine Bar in Orchard (Worth $80)" >
                    </TextView>

                    <TextView
                        android:id="@+id/lblPrice"
                        style="@style/PriceText"
                        android:text="$ 234.56"
                        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
                        android:textSize="35sp" >
                    </TextView>

                    <!--  -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                style="@style/DefaultText"
                                android:id="@+id/value"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/em_value" >
                            </TextView>

                            <TextView
                                android:id="@+id/lblValue"
                                style="@style/DefaultText"
                                android:layout_below="@+id/value"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="$372.00" >
                            </TextView>

                            <Button
                                android:id="@+id/btnShare"
                                android:layout_below="@+id/lblValue"
                                android:layout_width="match_parent"
                                style="@style/LargeButtonControl"
                                android:background="#3B5998"
                                android:tag="9999"
                                android:text="@string/em_share" >
                            </Button>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                style="@style/DefaultText"
                                android:id="@+id/discount"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/em_discount" >
                            </TextView>

                            <TextView
                                android:id="@+id/lblDiscount"
                                style="@style/DefaultText"
                                android:layout_below="@+id/discount"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="42 %" >
                            </TextView>

                            <Button
                                android:id="@+id/btnTweet"
                                style="@style/LargeButtonControl"
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:background="#1dcaff"
                                android:tag="10000"
                                android:text="@string/em_tweet" >
                            </Button>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/you_save"
                                style="@style/DefaultText"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/em_you_save" >
                            </TextView>

                            <TextView
                                android:id="@+id/lblYouSave"
                                style="@style/DefaultText"
                                android:layout_below="@+id/you_save"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="$ 153.00" >

                            </TextView>

                            <Button
                                android:id="@+id/btnDiscuss"
                                style="@style/LargeButtonControl"
                                android:text="@string/em_discuss"
                                android:layout_width="match_parent"
                                android:background="@color/green_buy_button"
                                android:layout_alignParentBottom="true">
                            </Button>
                        </RelativeLayout>
                    </LinearLayout>

                    <!-- btnLocations -->

                    <Button
                        android:id="@+id/btnYoutube"
                        style="@style/LargeButtonControl"
                        android:layout_width="match_parent"
                        android:background="@color/green_buy_button"
                        android:text="@string/em_youtube_video" >
                    </Button>

                    <Button
                        android:id="@+id/btnLocations"
                        style="@style/LargeButtonControl"
                        android:layout_width="match_parent"
                        android:background="@color/green_buy_button"
                        android:text="@string/em_map_location" >
                    </Button>

                    <!-- WebView -->


                    <!--
                         <ProgressBar
                        android:id="@+id/webViewProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip" >
                    </ProgressBar>
                    -->




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <WebView
                    android:id="@+id/webDescription"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#fff"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/em_left_time"
                android:textSize="13sp" >
            </TextView>

            <TextView
                android:id="@+id/lblExpireTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="12 days 12:34:33"
                android:textSize="17sp" >
            </TextView>
        </LinearLayout>

        <Button
            style="@style/LargeButtonControl"
            android:id="@+id/btnBuyNow"
            android:layout_gravity="center"
            android:layout_marginRight="?android:attr/listPreferredItemPaddingRight"
            android:layout_marginEnd="?android:attr/listPreferredItemPaddingRight"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/green_buy_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/em_buy_now" >
        </Button>
    </RelativeLayout>

</LinearLayout>