<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_material_dark</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        -->
    </style>

    <!-- App define style -->

    <style name="DefaultText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="DefaultTextSmall">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--  -->

    <style name="DefaultTextLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">top|center_horizontal</item>
    </style>

    <style name="DefaultTextLargeBold" parent="@style/DefaultTextLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PriceText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!--  -->

    <style name="HeaderText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFFFF0</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="DefaultTextLableControl" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  -->

    <style name="DefaultLableInputControl" parent="@style/DefaultText">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultInputControl" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="DefaultButtonControl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LargeButtonControl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabTextStyle" parent="@android:attr/tabWidgetStyle">
        <item name="android:textColor">@drawable/tab_text_color</item>
    </style>

    <!-- End Line -->


    <!-- ActionBar -->
    <style name="ActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="ActionBarItem">
        <item name="android:layout_width">@dimen/actionbar_item_width</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">1px</item>
    </style>

    <style name="ActionBarHomeItem" parent="ActionBarItem">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>

    <style name="ActionBarHomeLogo">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>

    <style name="ActionBarProgressBar" parent="@android:style/Widget.ProgressBar.Small"></style>
    <!-- End Line -->


    <!-- PopDownMenu Animations -->
    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/mnqa_grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/mnqa_shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/mnqa_grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/mnqa_shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/mnqa_grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/mnqa_shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/mnqa_pump_top</item>
        <item name="@android:windowExitAnimation">@anim/mnqa_disappear</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/mnqa_grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/mnqa_shrink_from_top</item>
    </style>

    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/mnqa_grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/mnqa_shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/mnqa_grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/mnqa_shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/mnqa_pump_bottom</item>
        <item name="@android:windowExitAnimation">@anim/mnqa_disappear</item>
    </style>

    <!-- PopDownQuickAction -->
    <style name="Animations.PopDownQuickAction" />

    <style name="Animations.PopDownQuickAction.Left">
        <item name="@android:windowEnterAnimation">@anim/qa_grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/qa_shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownQuickAction.Right">
        <item name="@android:windowEnterAnimation">@anim/qa_grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/qa_shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownQuickAction.Center">
        <item name="@android:windowEnterAnimation">@anim/qa_grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/qa_shrink_from_bottom</item>
    </style>

    <!-- PopUpQuickAction -->
    <style name="Animations.PopUpQuickAction" />

    <style name="Animations.PopUpQuickAction.Left">
        <item name="@android:windowEnterAnimation">@anim/qa_grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/qa_shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpQuickAction.Right">
        <item name="@android:windowEnterAnimation">@anim/qa_grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/qa_shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpQuickAction.Center">
        <item name="@android:windowEnterAnimation">@anim/qa_grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/qa_shrink_from_top</item>
    </style>
    <!-- End Line -->

</resources>
